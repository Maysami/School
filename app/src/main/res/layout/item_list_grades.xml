<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:background="@drawable/list_back_rounded">
    <ImageView
        android:id="@+id/img_header_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="32dp"
        android:src="@android:drawable/radiobutton_off_background"
        android:contentDescription="@string/str_header" />

    <com.fanavartech.android.schoolguidance.ui.TextViewPlus
        android:id="@+id/title_header_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ریاضی "
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:customFont="fonts/sans_light.ttf"
        android:layout_toLeftOf="@+id/img_header_news"
        android:layout_toStartOf="@+id/img_header_news"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_bookmark_border_white_24dp"
        android:layout_marginLeft="4dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>