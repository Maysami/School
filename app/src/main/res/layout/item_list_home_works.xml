<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="4dp">

    <com.fanavartech.android.schoolguidance.ui.TextViewPlus
        android:id="@+id/tv_type_home_works"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:background="#F44336"
        android:gravity="right|center"
        android:padding="4dp"
        android:paddingRight="4dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:customFont="fonts/Byekan.ttf" />


    <com.fanavartech.android.schoolguidance.ui.TextViewPlus
        android:id="@+id/tv_title_deadline_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_type_home_works"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:padding="4dp"
        android:text="تاریخ ارائه : "
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:customFont="fonts/sans_light.ttf" />

    <com.fanavartech.android.schoolguidance.ui.TextViewPlus
        android:id="@+id/tv_value_deadline_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_type_home_works"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@+id/tv_title_deadline_date"
        android:layout_toStartOf="@+id/tv_title_deadline_date"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:customFont="fonts/Byekan.ttf" />

    <ImageView
        android:id="@+id/img_download_file_home_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file_download_black_24dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_type_home_works"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"/>


</RelativeLayout>